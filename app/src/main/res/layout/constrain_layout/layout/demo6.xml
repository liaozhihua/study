<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_left"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:background="#733994"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/right1"
        android:layout_marginEnd="20dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/right1"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:background="#144494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_left" />

    <TextView
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_marginTop="20dp"
        app:layout_goneMarginTop="0dp"
        android:background="#43008877"
        app:layout_constraintTop_toBottomOf="@+id/tv_left"
        app:layout_constraintStart_toStartOf="@+id/tv_left"/>
</androidx.constraintlayout.widget.ConstraintLayout>